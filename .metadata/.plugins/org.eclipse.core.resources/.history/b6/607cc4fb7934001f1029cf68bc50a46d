/*
 * package com.org.microservice.controller;
 * 
 * import java.util.List;
 * 
 * import org.springframework.beans.factory.annotation.Autowired; import
 * org.springframework.cloud.context.config.annotation.RefreshScope; import
 * org.springframework.web.bind.annotation.GetMapping; import
 * org.springframework.web.bind.annotation.RequestMapping; import
 * org.springframework.web.bind.annotation.RestController;
 * 
 * import com.org.microservice.entity.UserResponse; import
 * com.org.microservice.service.UserClient;
 * 
 * @RestController
 * 
 * @RequestMapping("/feign")
 * 
 * @RefreshScope public class FeignClientController {
 * 
 * @Autowired private UserClient userClient;
 * 
 * @GetMapping("/findAllUsers") public List<UserResponse> getUsers(){ return
 * userClient.getUsers(); }
 * 
 * }
